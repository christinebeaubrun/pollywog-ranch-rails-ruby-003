<h1>Listing tadpoles</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tadpoles.each do |tadpole| %>
      <tr>
        <td><%= link_to 'Show', tadpole %></td>
        <td><%= link_to 'Edit', edit_tadpole_path(tadpole) %></td>
        <td><%= link_to 'Destroy', tadpole, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tadpole', new_tadpole_path %>
